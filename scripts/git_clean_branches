#!/usr/bin/env ruby
require 'rubygems'
require 'open3'

# Usage :
# stand in the project directory and execute git_clearn_branches
#
# You will be asked to delete local branches like this
# Do you want to delete branch   154-roles ?
#
# Note: This only deletes local branch. It does NOT delete remote branch.

Dir.chdir(Dir.pwd) do

  cmd = 'git branch'
  Open3.popen3(cmd) do |stdin, stdout, stderr, wait_thr|
    while branch = stdout.gets
      branch = branch.chomp
      next if branch =~ /master/
      puts "Do you want to delete branch #{branch} ?"
      a = gets.chomp
      if %w(y yes).include? a.downcase
        cmd = "git branch -D #{branch}"
        system cmd
        puts ""
      end
    end
  end

end
